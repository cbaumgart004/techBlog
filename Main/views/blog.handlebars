<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='blog-header'>
      <!-- Blog Title -->
      <h2 id='blog-title'>
        
        <a href='/profile'>{{blog.title}}</a>
        <!-- Ensure this renders correctly -->
      </h2>
      <p id='blog-info'>By {{user.name}} at {{blog.createdAt}}</p>
      <p id='blog-created-at'></p>
      </div>
      </div>
      <!-- Blog Content -->
      <p id='blog-content'>{{blog.content}}</p>
    </div>
  </div>
  <!-- Comment Form -->
  <div class='row mt-4'>
    <div class='col-md-12'>
      <h4>Leave a Comment:</h4>
      <form id='comment-form'>
        <div class='form-group'>
          <textarea
            id='comment-text'
            class='form-control'
            placeholder='Write your comment here...'
            rows='4'
            required
          ></textarea>
        </div>
        <button type='submit' class='btn btn-primary'>Submit Comment</button>
      </form>
    </div>
  </div>

  <!-- Render existing comments -->
  <h3>Comments:</h3>
  <div id='comments-container'>
    <div class='col-md-12'>
      <!-- This is where comments will be rendered dynamically -->
      <p id='no-comments-message'></p>
    </div>
  </div>
</div>
<script src='/js/blog.js'></script>