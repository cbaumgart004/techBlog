<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}} to your Personal Blog Entries</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
  <div class="form-group">
    <label for="blog-name">Blog name:</label>
    <input class="form-input" type="text" id="blog-name" name="blog-name" />
  </div>

  <div class="form-group">
    <label for="blog-desc">Description:</label>
    <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
  </div>

  <!-- Create Blog Button -->
  <button type="submit" class="btn btn-primary" id="create-blog-btn">Create</button>

  <!-- Edit Blog Button (initially hidden) -->
  <button type="button" class="btn btn-primary" id="edit-blog-btn" style="display: none;">Save</button>
</form>
  </div>

  <!-- Render existing blogs -->
  {{#if blogs}}
    <div class='col-md-6 project-list'>
      <h3>Current Blogs:</h3>

      {{#each blogs as |blog|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/blog/{{blog.id}}'>{{blog.title}}</a></h4>
            <p>{{blog.content}}<p></p>
          </div>
          
          <div class='col-md-4'>
            <button
            class='btn btn-med btn-primary'
            data-id='{{blog.id}}'
            >Edit</button> | 

            <button
            class='btn btn-med btn-danger'
            data-id='{{blog.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>